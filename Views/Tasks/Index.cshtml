@model List<InMemoryTaskManagement.Models.Task>

@{
    ViewData["Title"] = "Tasks List";
}

<h1>Tasks</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Task</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Due Date</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var task in Model)
{
        <tr>
            <td>@task.Title</td>
            <td>@task.DueDate.ToShortDateString()</td>
            <td>@task.Priority</td>
            <td>@(task.IsCompleted ? "Completed" : "Pending")</td>
            <td>
                <a asp-action="Details" asp-route-id="@task.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@task.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@task.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
